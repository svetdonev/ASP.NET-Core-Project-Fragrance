@model AddFragranceFormModel

@{
    ViewData["Title"] = "Edit Fragrance ";
}

<div class="container">
    <div class="row">
        <div class="col-sm-12 offset-lg-3 col-lg-8 col-xl-6">
            <h2 class="heading-margin my-colorText text-center"><strong>Edit Fragrance</strong></h2>
            <form asp-controller="Fragrances" asp-action="Edit" method="post">
                <div class="form-group d-none">
                    <input asp-for="Id" class="form-control">
                </div>
                <div class="form-group my-colorText">
                    <label asp-for="Name"></label>
                    <input asp-for="Name" class="form-control">
                    <span asp-validation-for="Name" class="small text-danger"></span>
                </div>
                <div class="form-group my-colorText">
                    <label asp-for="Year"></label>
                    <input asp-for="Year" class="form-control">
                    <span asp-validation-for="Year" class="small text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Description"></label>
                    <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                    <span asp-validation-for="Description" class="small text-danger"></span>
                </div>
                <div class="form-group my-colorText">
                    <label asp-for="Type"></label>
                    <input asp-for="Type" class="form-control">
                    <span asp-validation-for="Type" class="small text-danger"></span>
                </div>
                <div class="form-group my-colorText">
                    <label asp-for="ImageUrl"></label>
                    <input asp-for="ImageUrl" class="form-control" placeholder="Your URL here...">
                    <span asp-validation-for="ImageUrl" class="small text-danger"></span>
                </div>
                <button class="btn btn-primary" style=" border: none;" type="submit">Save Changes</button>
            </form>
        </div>
    </div>
</div>
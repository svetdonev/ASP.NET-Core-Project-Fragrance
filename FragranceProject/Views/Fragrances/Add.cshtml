@model AddFragranceFormModel

@{
    ViewData["Title"] = "Add Fragrance";
}

<div class="container">
    <div class="row">
        <div class="col-sm-12 offset-lg-1 col-lg-8 col-xl-6">
            <h2 class="heading-margin">Add a Fragrance</h2>
            <form method="post">
                <div class="form-group text-center">
                    <img id="ProfilePicturePreview" class="border-info" style="max-width: 180px"/>
                </div>
                <div class="form-group">
                    <label asp-for="Name"></label>
                    <input asp-for="Name" class="form-control" placeholder="Type fragrance's name...">
                </div>
                <div class="form-group">
                    <label asp-for="Milliliters"></label>
                    <input asp-for="Milliliters" class="form-control">
                </div>
                <div class="form-group">
                    <label asp-for="Year"></label>
                    <input asp-for="Year" class="form-control">
                </div>
                <div class="form-group">
                    <label asp-for="Description"></label>
                    <textarea rows="4" asp-for="Description" class="form-control" placeholder="Add some description for the fragrance..."></textarea>
                </div>
                <div class="form-group">
                    <label asp-for="Type"></label>
                    <input asp-for="Type" class="form-control">
                </div>
                <div class="form-group">
                    <label asp-for="ImageUrl"></label>
                    <input asp-for="ImageUrl" class="form-control" placeholder="Your URL here...">
                </div>
                <div class="form-group">
                    <label for="exampleFormControlSelect1">Example select</label>
                    <select class="form-control" id="exampleFormControlSelect1">
                        <option>1</option>
                        <option>2</option>
                        <option>3</option>
                        <option>4</option>
                        <option>5</option>
                    </select>
                </div>

                <input class="btn btn-primary" type="submit" value="Add"/>
            </form>
        </div>
    </div>
</div>


@section Scripts{
    <script>
        $(document).ready(function () {
            var output = document.getElementById('ProfilePicturePreview');
            var imageUrlInput = $('#ImageUrl');

            output.src = imageUrlInput.val();

            imageUrlInput.on("input", function () {
                output.src = $(this).val();
            });
        });
    </script>
}
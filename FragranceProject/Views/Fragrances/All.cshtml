@model AllFragrancesQueryModel

@{
    ViewData["Title"] = "All fragrances";
}

<div class="mb-5"></div>

<form method="get" class="example">
    <div class="row mb-5">
        <div class="col-md-4">
            <div class="form-group">
                <select asp-for="CategoryName" id="categorySelect" class="form-control">
                    <option value="">All</option>
                    @foreach (var category in Model.Categories)
                    {
                        <option value="@category">@category</option>
                    }
                </select>
            </div>
        </div>

        <div class="col-md-4">
            <div class="form-group">
                <select asp-for="Sorting" id="sortingSelect" class="form-control">
                    <option value="0" selected>Date Created</option>
                    <option value="1">Name</option>
                    <option value="2">Year</option>
                </select>
            </div>
        </div>

        <div class="col-md-4 d-flex align-items-center">
            <div class="d-flex">
                <input class="form-control" asp-for="SearchTerm" type="text" placeholder="Type to search..">
                <button type="submit" class="btn btn-primary ml-1 text-center"><i class="fa fa-search"></i></button>
            </div>
        </div>
    </div>
</form>

@{
    var previousPage = Model.CurrentPage - 1;
    if (previousPage < 1)
    {
        previousPage = 1;
    }

    var maxPage = Math.Ceiling((double)Model.TotalFragrances / AllFragrancesQueryModel.FragrancesPerPage);

}

@{
    if (Model.Fragrances.Any())
    {
        <div class="row mb-5">
            <div class="col-md-6">
                <a class="btn btn-default @(Model.CurrentPage == 1 ? "disabled" : string.Empty)" style="color: black; background-color: #47c6f5;"
           asp-controller="Fragrances"
           asp-action="All"
           asp-route-currentPage="@previousPage"
           asp-route-searchTerm="@Model.SearchTerm">&#8249; Previous</a>
            </div>

            <div class="col-md-6">
                <a class="btn btn-default float-right @(Model.CurrentPage == maxPage ? "disabled" : string.Empty)" style="color: black; background-color: #47c6f5;"
           asp-controller="Fragrances"
           asp-action="All"
           asp-route-currentPage="@(Model.CurrentPage + 1)"
           asp-route-searchTerm="@Model.SearchTerm">Next &#8250;</a>
            </div>
        </div>
    }
}


<div class="mb-5"></div>

<div class="row" id="fragranceCardsContainer">
    @foreach (var fragrance in Model.Fragrances)
    {
        <div class="col-md-3 fragrance-card" data-category="@fragrance.Category" data-sorting="@Model.Sorting">
            <div class="card mb-3">
                <img class="card-img-top" style="height: auto; width:auto;" src="@fragrance.ImageUrl" alt="@fragrance.Name">
                <div class="card-body">
                    <h5 class="card-title">@fragrance.Name <span>@fragrance.Milliliters ml (@fragrance.Year)</span></h5>
                    <p class="card-text">@fragrance.Type</p>
                    <p class="card-text">@fragrance.Category</p>
                </div>
                <ul class="list-group list-group-flush">
                    <li class="list-group-item">Top Notes: </li>
                    <li class="list-group-item">Middle Notes: </li>
                    <li class="list-group-item">Base Notes: </li>
                </ul>
                <div class="card-body text-center">
                    <a asp-controller="Fragrances" asp-action="Details" asp-route-fragranceId="@fragrance.Id" class="btn btn-primary">Details</a>
                </div>
            </div>
        </div>
    }
</div>

<script>
    document.addEventListener('DOMContentLoaded', function () {
        var categorySelect = document.getElementById('categorySelect');
        var sortingSelect = document.getElementById('sortingSelect');
        var fragranceCards = document.querySelectorAll('.fragrance-card');

        categorySelect.addEventListener('change', function () {
            var selectedValue = categorySelect.value;

            fragranceCards.forEach(function (card) {
                var showCard = selectedValue === '' || card.dataset.category === selectedValue;

                card.style.display = showCard ? 'block' : 'none';
            });
        });
    });
</script>
@model IndexViewModel

@{
    ViewData["Title"] = "Welcome";
}

@{
    var fragrances = Model.Fragrances;

    var first = fragrances.Any() ? fragrances[0] : null;
    var second = fragrances.Count > 1 ? fragrances[1] : null;
    var third = fragrances.Count > 2 ? fragrances[2] : null;
    var fourth = fragrances.Count > 3 ? fragrances[3] : null;
    var fifth = fragrances.Count > 4 ? fragrances[4] : null;
    var sixth = fragrances.Count > 5 ? fragrances[5] : null;
    var seventh = fragrances.Count > 6 ? fragrances[6] : null;
    var eight = fragrances.Count > 7 ? fragrances[7] : null;
}


<div class="text-center my-colorText">
    <p class="mb-2" style="font-size: 29px"><Font face="Times New Roman">We have:</Font></p>
    <ul class="list-inline" style="font-size: 18px;">
        <li class="list-inline-item bg-transparent">Fragrances: @Model.FragrancesCount</li>
        <li class="list-inline-item bg-transparent ml-2">Reviews: @Model.ReviewsCount</li>
        <li class="list-inline-item bg-transparent ml-2">Users: @Model.UsersCount</li>
    </ul>

</div>
<div class="mb-3"></div>


@if (!fragrances.Any())
{
    <div class="jumbotron">
        <h1 class="display-4">Welcome to the fragrance world!</h1>
        <p class="lead">There is no fragrances in the system currently. You can add one!</p>
        <hr class="my-4">
        <p class="lead">
            <a asp-controller="Fragrances" asp-action="Add" class="btn btn-primary btn-lg" role="button" style="background-color: #47c6f5; color: black;">Add Fragrance</a>
        </p>
    </div>
}

<div>
    @if(first != null)
    {
        <a asp-controller="Fragrances" asp-action="Details" asp-route-fragranceId="@first.Id">
            <img src="@first.ImageUrl" class="img-thumbnail" style="height: 176px;" alt="@first.Name">
        </a>
    }
    @if (second != null)
    {
        <a asp-controller="Fragrances" asp-action="Details" asp-route-fragranceId="@second.Id">
            <img src="@second.ImageUrl" class="img-thumbnail" style="height: 176px;" alt="@second.Name">
        </a>
    }
    @if (third != null)
    {
        <a asp-controller="Fragrances" asp-action="Details" asp-route-fragranceId="@third.Id">
            <img src="@third.ImageUrl" class="img-thumbnail" style="height: 176px;" alt="@third.Name">
        </a>
    }
    @if(fourth != null)
    {
        <a asp-controller="Fragrances" asp-action="Details" asp-route-fragranceId="@fourth.Id">
            <img src="@fourth.ImageUrl" class="img-thumbnail" style="height: 176px;" alt="@fourth.Name">
        </a>
    }
    @if (fifth != null)
    {
        <a asp-controller="Fragrances" asp-action="Details" asp-route-fragranceId="@fifth.Id">
            <img src="@fifth.ImageUrl" class="img-thumbnail" style="height: 176px;" alt="@fifth.Name">
        </a>
    }
    @if(sixth != null)
    {
        <a asp-controller="Fragrances" asp-action="Details" asp-route-fragranceId="@sixth.Id">
            <img src="@sixth.ImageUrl" class="img-thumbnail" style="height: 176px;" alt="@sixth.Name">
        </a>
    }
    @if (seventh != null)
    {
        <a asp-controller="Fragrances" asp-action="Details" asp-route-fragranceId="@seventh.Id">
            <img src="@seventh.ImageUrl" class="img-thumbnail" style="height: 176px;" alt="@seventh.Name">
        </a>
    }
    @if (eight != null)
    {
        <a asp-controller="Fragrances" asp-action="Details" asp-route-fragranceId="@eight.Id">
            <img src="@eight.ImageUrl" class="img-thumbnail" style="height: 176px;" alt="@eight.Name">
        </a>
    }
</div>

       
<div class="mb-3"></div>

<div id="carouselExampleSlidesOnly" class="carousel slide" data-ride="carousel">
    <div class="carousel-inner">
        <div class="carousel-item active">
            <a asp-controller="Fragrances" asp-action="All">
                <img class="d-block w-120" src="~/cover.jpg" alt="First slide">
            </a>
            
        </div>
    </div>
</div>

<div class="mb-3"></div>

<div id="carouselExampleSlidesOnly" class="carousel slide" data-ride="carousel">
    <div class="carousel-inner">
        <div class="carousel-item active" style="margin-left: 55px;">
            <img class="d-block w-120" src="~/cover-2.jpg" alt="First slide">
        </div>
    </div>
</div>
